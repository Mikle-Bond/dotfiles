# Global
command=/usr/lib/i3blocks/$BLOCK_NAME/$BLOCK_NAME
separator=false
# separator_block_width=15
markup=none
interval=2

[mpd]
command=~/dev/scripts/i3block/mpd_idle
markup=pango
interval=persist
signal=15

[volume-pulseaudio]
interval=persist
SUBSCRIBE=1
USE_ALSA_NAME=0

[_]
color=#a6e22e
interval=once
command=echo
label=RES

[memory]
label=M 
interval=30

[memory]
label=S 
instance=swap
interval=30

[disk]
label=H 
interval=30

[disk-io]
interval=persist
min_width=xxx/xx kB/s

[_]
color=#a6e22e
interval=once
command=echo
label=NET

[essid]
command=iwgetid -r
interval=60
INTERFACE=wlp3s0

[iface]
interval=60

[_]
color=#a6e22e
interval=once
command=echo
label=PWR

[battery]
# label=âš¡ 
